{
  "name": "@bodegón/creator-agent",
  "version": "1.0.0",
  "description": "Agente personalizado para crear composiciones artísticas bodegón desde imágenes de productos",
  "main": "dist/index.js",
  "bin": {
    "bodegon-agent": "dist/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/cli/index.js",
    "cli": "tsx src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run test && npm run lint"
  },
  "keywords": [
    "claude-agent",
    "bodegón",
    "artificial-intelligence",
    "image-generation",
    "web-scraping",
    "typescript",
    "mcp-server"
  ],
  "author": {
    "name": "Bodegón Creator Team",
    "email": "contact@bodegon.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bodegon/creator-agent.git"
  },
  "bugs": {
    "url": "https://github.com/bodegon/creator-agent/issues"
  },
  "homepage": "https://github.com/bodegon/creator-agent#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.61",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^3.22.4",
    "yaml": "^2.3.4",
    "inquirer": "^9.2.12",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "cli-progress": "^3.12.0",
    "fs-extra": "^11.1.1",
    "joi": "^17.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.5",
    "@types/inquirer": "^9.0.6",
    "@types/fs-extra": "^11.0.3",
    "@types/uuid": "^9.0.6",
    "@types/cli-progress": "^3.11.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2",
    "rimraf": "^5.0.5",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1"
  },
  "files": [
    "dist",
    "config",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}